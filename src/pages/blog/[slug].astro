---
import Layout from '@/layouts/Layout.astro'
import { template } from '@/settings'
import { getCollection, render } from 'astro:content'

export async function getStaticPaths(): Promise<Array<{ params: { slug: string }, props: { post: any } }>> {
	// 讀取 blog collection 的所有文章
	const blogEntries = await getCollection('blog')

	// 逐篇文章建立對應的 slug 路徑與 props
	const posts = blogEntries.map(post => {
		const slug = post.id
		return {
			params: { slug },
			props: { post },
		}
	})
	// 回傳靜態路由設定
	return posts
}
const { post } = Astro.props
const { title, date, tags } = post.data
// 將 Markdown 內容渲染成可用的 Astro component
const { Content } = await render(post)
---

<Layout title={title}>
	{/* 外層容器：拉寬整頁內容區，避免內文被限制在小寬度 */}
	<div class='mx-auto w-full max-w-3xl px-6 lg:max-w-4xl lg:px-0'>
		<article
			class='prose max-w-none w-full text-left prose-headings:text-base-content prose-p:text-base-content/80'
		>
			<!-- Header section -->
			<div class='mb-8 border-b pb-8'>
				<h1 class='text-4xl font-bold mb-4 text-base-content break-words'>{title}</h1>
				<div class='flex flex-wrap items-center gap-4 text-base-content/70'>
					<!-- Date -->
					<time datetime={date} class='flex items-center'>
						<svg
							xmlns='http://www.w3.org/2000/svg'
							class='h-4 w-4 mr-2'
							fill='none'
							viewBox='0 0 24 24'
							stroke='currentColor'
						>
							<path
								stroke-linecap='round'
								stroke-linejoin='round'
								stroke-width='2'
								d='M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
							></path>
						</svg>
						{
							new Date(date).toLocaleDateString('en-US', {
								year: 'numeric',
								month: 'long',
								day: 'numeric',
							})
						}
					</time>

					<!-- Tags -->
					{
						tags && (
							<div class='flex flex-wrap gap-2'>
								{tags.map(tag => (
									<span class='badge badge-accent badge-outline'>{tag}</span>
								))}
							</div>
						)
					}
				</div>
			</div>

			<!-- Post content -->
			<!-- 主要內文：覆寫 typography 預設寬度、字級與排版 -->
			<div
				class='prose max-w-3xl mt-8 prose-h2:text-2xl prose-h2:font-bold prose-h2:mb-4
         prose-h3:text-xl prose-h3:font-semibold prose-h3:mb-3
         prose-p:mb-4 prose-p:leading-relaxed prose-p:text-justify
         prose-strong:text-base-content prose-strong:font-bold
         prose-em:italic
         prose-a:text-accent prose-a:no-underline hover:prose-a:underline
         prose-code:text-accent prose-code:bg-base-200 prose-code:px-1 prose-code:py-0.5 prose-code:rounded
         prose-blockquote:border-l-4 prose-blockquote:border-accent prose-blockquote:pl-4 prose-blockquote:italic
         prose-ul:list-disc prose-ul:pl-6
         prose-ol:list-decimal prose-ol:pl-6
         prose-li:mb-2
         prose-img:rounded-xl prose-img:my-8 prose-img:mx-auto prose-img:w-full
         prose-figcaption:text-center blog-content'
        >
                <Content />
			</div>
		</article>
	</div>
</Layout>

<style>
	.blog-content :where(img) {
		width: 100%;
		max-width: 100%;
		height: auto;
		display: block;
		object-fit: contain;
	}

	.blog-content :where(figure) {
		margin-left: 0;
		margin-right: 0;
		width: 100%;
	}

	@media (max-width: 640px) {
		.blog-content {
			padding-inline: 0.25rem;
		}

		.blog-content :where(img) {
			border-radius: 0.9rem;
		}
	}
</style>
